<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FontTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/notosanscjk</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="FontBoldTextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/notosanscjk_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>
</resources>
